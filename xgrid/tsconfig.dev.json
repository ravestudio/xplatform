{
  "compilerOptions": {
    "sourceMap": true,
    "module": "commonjs",
    "target": "es6",
    "lib": ["es2015", "es2017", "dom"],
    "removeComments": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,

    "jsx": "react",
    "allowJs": true,
    "strict": true,
    "noImplicitReturns": false,
    "rootDir": "src",
    "outDir": "dist",
    "strictNullChecks": false
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"],
}
